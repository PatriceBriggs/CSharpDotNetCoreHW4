<Window x:Class="ASsn4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASsn4"
        mc:Ignorable="d"
        Title="ZipCode Checker" Height="250" Width="400">
    <StackPanel>
        <Label Margin="30,30,30,0" Width="250">Enter your zip code here:</Label>
        <TextBox x:Name="txtZipCodeToCheck" Margin="30,10,30,10" Height="25" Width="250" TextChanged="txtZipCodeToCheck_TextChanged" />
        <Button x:Name="btnGoodZip" IsEnabled="False" Width="250" Height="25" Margin="30,0,30,0">Submit</Button>
    </StackPanel>
</Window>
